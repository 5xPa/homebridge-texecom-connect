{
	"pluginAlias": "TexecomConnect",
	"pluginType": "platform",
	"schema": {
		"properties": {
			"host": {
				"default": "localhost",
				"format": "hostname",
				"minLength": 1,
				"required": true,
				"title": "IP Address / Hostname",
				"type": "string"
			},
			"port": {
				"default": 10001,
				"maximum": 65535,
				"required": true,
				"title": "IP Port",
				"type": "integer"
			},
			"areas": {
				"expandable": true,
				"items": {
					"properties": {
						"accessory": {
							"oneOf": [
								{
									"enum": [
										"security"
									],
									"title": "Alarm"
								}
							],
							"required": true,
							"title": "Area Type",
							"type": "string"
						},
						"name": {
							"minLength": 1,
							"placeholder": "e.g. House",
							"required": true,
							"title": "Name",
							"type": "string"
						},
						"number": {
							"minimum": 1,
							"placeholder": "e.g. 1, 2, 3",
							"required": true,
							"type": "number"
						}
					},
					"required": true,
					"title": "Areas",
					"type": "object",
					"uniqueItems": true
				},
				"type": "array"
			},
			"zones": {
				"expandable": true,
				"items": {
					"properties": {
						"accessory": {
							"oneOf": [
								{
									"enum": [
										"motion"
									],
									"title": "Motion Sensor"
								},
								{
									"enum": [
										"contact"
									],
									"title": "Contact Sensor"
								},
								{
									"enum": [
										"smoke"
									],
									"title": "Smoke"
								},
								{
									"enum": [
										"carbon-monoxide"
									],
									"title": "Carbon Monoxide"
								}
							],
							"required": true,
							"title": "Sensor Type",
							"type": "string"
						},
						"name": {
							"minLength": 1,
							"placeholder": "e.g. Living Room, Bedroom, Kitchen",
							"required": true,
							"title": "Name",
							"type": "string"
						},
						"number": {
							"minimum": 1,
							"placeholder": "e.g. 1, 2, 3",
							"required": true,
							"type": "number"
						}
					},
					"required": true,
					"title": "Zones",
					"type": "object",
					"uniqueItems": true
				},
				"type": "array"
			}
		},
		"type": "object"
	},
	"singular": true
}
